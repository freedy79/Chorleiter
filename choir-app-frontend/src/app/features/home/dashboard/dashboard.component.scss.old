@use 'sass:color';

:root{
  --brand:#0b79d0; --brand-600:#0966ae;
  --accent:#ffce2c; --bg:#f6f7fb; --card:#ffffff;
  --text:#121417; --muted:#6b7280;
  --success:#16a34a; --danger:#dc2626;
  --radius:16px; --shadow:0 8px 24px rgba(2,6,23,.08);
}

/* Layout wrapper */
.dashboard-layout {}
.dashboard-container {}
.main-content {}

/* Cards baseline if not globally provided */
.card{background:var(--card);border-radius:var(--radius);box-shadow:var(--shadow)}

/* HERO & KPI */
.hero{ padding:16px; display:grid; gap:14px; }
.dashboard-header{ display:flex; justify-content:space-between; align-items:center; margin-bottom:.5rem; }

/* Grid rechts (Content) */
.content-grid{ display:grid; gap:16px; grid-template-columns: 2fr 1.2fr; grid-auto-rows:minmax(120px,auto); }

/* Timeline helpers (shared with widget) */
.timeline{border-inline-start:2px solid #e5e7eb;padding-inline-start:16px;display:grid;gap:14px}
.t-dot{width:10px;height:10px;border:2px solid #fff;background:var(--brand);border-radius:999px;position:relative;left:-23px;top:15px;box-shadow:0 0 0 2px #e5e7eb}

/* Utilities */
.visually-hidden{position:absolute!important;height:1px;width:1px;overflow:hidden;clip:rect(1px,1px,1px,1px);white-space:nowrap}


.dashboard-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
}

.content-grid {
  display: grid;
  gap: 16px;
  grid-template-columns: 2fr 1.2fr;
  grid-auto-rows: minmax(120px, auto);
}
@media (max-width:1024px){ .content-grid { grid-template-columns:1fr } }
@media (max-width:480px){ :host, .main-content { padding-bottom:96px } }


/* Grid rechts (Content) */
.content-grid{ display:grid; gap:16px; grid-template-columns: 2fr 1.2fr; grid-auto-rows:minmax(120px,auto); }

.left-tile {
  grid-column: 1;
}

.right-tile {
  grid-column: 2;
}

.hero {
  margin-bottom: 2rem;
}

.kpi {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 1rem;
}

.kpi-item {
  padding: 0.5rem 1rem;
  border-radius: 4px;
  background-color: #f5f5f5;
  text-align: center;

  .label {
    font-size: 0.85rem;
    color: #555;
  }

  .value {
    font-size: 1.25rem;
    font-weight: bold;
  }
}

@media (max-width: 480px) {
  .kpi {
    grid-template-columns: repeat(2, 1fr);


    .quick-actions {
      display: flex;
      gap: 1rem;
      margin-bottom: 1rem;
      align-items: center;

      @media (max-width: 480px) {
        flex-direction: column;
        align-items: stretch;

        button {
          width: 100%;
        }
      }
    }

    .dashboard-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
      gap: 1.5rem;
    }

    mat-card-content h3 {
      font-weight: 500;
      color: #666;
      border-bottom: 1px solid #eee;
      padding-bottom: 0.5rem;
      margin-bottom: 1rem;
    }

    .no-data-message {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100px;
      color: #999;
    }

    .latest-post {
      margin-top: 1rem;
      cursor: pointer;
      padding: 0.5rem;
      border-radius: 4px;
      transition: background-color 0.2s;

      &:hover {
        background-color: #f5f5f5;
      }
    }

    .dashboard-layout {
      display: grid;
      grid-template-columns: 1fr 400px;
      gap: 2rem;
    }

    .content-grid {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 1.5rem;
    }
  }
}

@media (max-width: 1024px) {
  .dashboard-layout {
    grid-template-columns: 1fr;
  }

  .content-grid {
    grid-template-columns: 1fr;
  }
}

.upcoming-timeline {
  padding: 1rem;
  border: 1px solid #eee;
  border-radius: 4px;
  background: #fff;

  .timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .timeline {
    border-left: 2px solid #eee;
    padding-left: 1rem;
  }

  .item {
    position: relative;
    margin-bottom: 1rem;
    cursor: pointer;

    &:last-child {
      margin-bottom: 0;
    }
  }

  .dot {
    position: absolute;
    left: -1.15rem;
    top: 0.4rem;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: #3f51b5;
  }

  .muted {
    color: #666;
    font-size: 0.875rem;
  }
}

.timeline {
  list-style: none;
  margin: 0;
  padding: 0;
}

.timeline li {
  position: relative;
  padding-left: 1.25rem;
  margin-bottom: 0.5rem;
}

.timeline li::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0.5rem;
  width: 0.5rem;
  height: 0.5rem;
  border-radius: 50%;
  background-color: var(--dot-color, #1976d2);
}

  .item-container {
    width: 95%;
    text-align: center;
    padding: 0.5rem;
    border-bottom: 1px solid #eee;

  &:last-child {
    border-bottom: none;
  }

  .clickable {
    cursor: pointer;

    &:hover {
      background-color: color.adjust(#eee, $lightness: -5%);
    }
    }

    .title {
      font-weight: bold;
      font-size: 1.1rem;
    }

  .composer {
    font-size: 0.9rem;
    color: #999;
  }

    .subtitle {
      font-size: 0.9rem;
      color: #666;
    }
  }

.latest-post-card {
  max-height: 350px;
}

.latest-post-card .post-excerpt {
  display: -webkit-box;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
