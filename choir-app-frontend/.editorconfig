# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.ts]
quote_type = single
ij_typescript_use_double_quotes = false
indent_style = space
indent_size = 4

[*.js]
quote_type = single
ij_typescript_use_double_quotes = false
indent_style = space
indent_size = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.html | *.vue ]
indent_style = space
indent_size = 4
