{
  "name": "choir-app-frontend",
  "version": "0.5.2",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "startwithtimestamp": "node ./scripts/serve-with-timestamp.js",
    "startlocal": "ng serve --configuration=localdata",
    "build": "ng build",
    "lint": "ng lint",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --watch=false",
    "pretest": "npm run generate-build-info",
    "generate-build-info": "node ./scripts/generate-build-info.js",
    "prebuild": "npm run generate-build-info",
    "prestart": "npm run generate-build-info",
    "prestartwithtimestamp": "npm run generate-build-info",
    "prune": "ts-prune -p tsconfig.app.json",
    "lighthouse": "lighthouse http://localhost:4200 --view --preset=desktop",
    "lighthouse:mobile": "lighthouse http://localhost:4200 --view --preset=perf --emulated-form-factor=mobile --throttling.cpuSlowdownMultiplier=4",
    "lighthouse:ci": "lighthouse http://localhost:4200 --output=json --output=html --output-path=./lighthouse-report",
    "lighthouse:auth": "lighthouse http://localhost:4200 --view --chrome-flags=\"--no-sandbox\" --disable-storage-reset",
    "lighthouse:build": "npm run build && node ./scripts/lighthouse-test-server.js",
    "pwa-health-check": "node ./scripts/pwa-health-check.js",
    "icons:convert": "node ./scripts/convert-svg-to-png.js",
    "build:prod": "npm run generate-build-info && ng build --configuration production",
    "build:stats": "ng build --configuration production --named-chunks --stats-json",
    "analyze": "npm run build:stats && node ./scripts/analyze-bundle.js",
    "perf:check": "npm run lighthouse:mobile && npm run pwa-health-check"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.0.3",
    "@angular/cdk": "^20.0.3",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/material": "^20.0.3",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@angular/service-worker": "^20.3.16",
    "@ckeditor/ckeditor5-angular": "^10.0.0",
    "@ckeditor/ckeditor5-build-classic": "^41.4.2",
    "@tonejs/midi": "^2.0.28",
    "bootstrap": "^5.3.8",
    "dompurify": "^3.1.6",
    "marked": "^12.0.2",
    "rxjs": "~7.8.0",
    "soundfont-player": "^0.12.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.0.2",
    "@angular/cli": "^20.0.2",
    "@angular/compiler-cli": "^20.0.0",
    "@types/jasmine": "~5.1.0",
    "baseline-browser-mapping": "^2.9.11",
    "jasmine-core": "~5.7.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lighthouse": "^12.8.2",
    "puppeteer": "^24.13.0",
    "sharp": "^0.34.5",
    "ts-prune": "^0.10.3",
    "typescript": "~5.8.2"
  }
}
